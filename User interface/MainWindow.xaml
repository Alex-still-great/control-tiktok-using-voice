<Window x:Class="User_interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoiTok AI" Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1A1A1A">

    <Window.Resources>
        <Style x:Key="ModernGradientButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF5F6D" Offset="0"/>
                        <GradientStop Color="#FFC371" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="#252525" CornerRadius="20" Margin="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Background="#2B2B2B">
                    <TextBlock Text="VoiTok" Foreground="White" FontWeight="Bold" Margin="0,30" HorizontalAlignment="Center"/>
                    <TextBlock Text="Settings" Foreground="Gray" Margin="0,10" HorizontalAlignment="Center"/>
                    <TextBlock Text="Help" Foreground="Gray" Margin="0,10" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="30">
                    <TextBlock Text="VoiTok - AI Voice Controller" FontSize="22" FontWeight="Bold" Foreground="White"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,25">
                        <Ellipse Width="8" Height="8" Fill="#4CAF50" Margin="0,0,8,0"/>
                        <TextBlock Text="System Active" Foreground="#4CAF50" FontSize="12"/>
                    </StackPanel>

                    <Button Style="{StaticResource ModernGradientButton}" Height="100" Margin="0,0,0,30" Click="runcode_Click">
                        <TextBlock Text="STOP LISTENING" FontSize="18" FontWeight="Bold"/>
                    </Button>

                    <TextBlock Text="ACTIVITY LOGS" Foreground="Gray" FontSize="11" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Border Background="#1E1E1E" CornerRadius="12" Height="250">
                        <ListBox x:Name="ListLogs" Background="Transparent" BorderThickness="0" Foreground="White" Padding="10">
                            <ListBoxItem Content="[System] Application Started..."/>
                            <ListBoxItem Content="[System] Waiting for voice command..."/>
                        </ListBox>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>